<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Equipamentos">

    <View
        android:id="@+id/containerPerfil"
        style="@style/ContainerComponentsGrande"
        android:layout_width="374dp"
        android:layout_height="730dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerPersonagem"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_equipamentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="EQUIPAMENTOS"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_width="352dp"
        android:layout_height="389dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_equipamentos" />

    <EditText
        android:id="@+id/edit_item1"
        style="@style/Edit_Text"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:hint="Item"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toTopOf="@+id/containerComponents" />

    <EditText
        android:id="@+id/edit_Peso1"
        style="@style/Edit_Text"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="162dp"
        android:layout_marginTop="4dp"
        android:hint="Peso"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edit_item1"
        app:layout_constraintStart_toStartOf="@+id/edit_item1"
        app:layout_constraintTop_toTopOf="@+id/containerComponents" />

    <EditText
        android:id="@+id/edit_item2"
        style="@style/Edit_Text"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:hint="Item"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/edit_item1" />

    <EditText
        android:id="@+id/edit_Peso2"
        style="@style/Edit_Text"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="5dp"
        android:hint="Peso"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edit_item1"
        app:layout_constraintStart_toStartOf="@+id/edit_item2"
        app:layout_constraintTop_toBottomOf="@+id/edit_Peso1" />

    <EditText
        android:id="@+id/edit_item3"
        style="@style/Edit_Text"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:hint="Item"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/edit_item2" />

    <EditText
        android:id="@+id/edit_Peso3"
        style="@style/Edit_Text"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="6dp"
        android:hint="Peso"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edit_item1"
        app:layout_constraintStart_toStartOf="@+id/edit_item3"
        app:layout_constraintTop_toBottomOf="@+id/edit_Peso2" />


    <EditText
        android:id="@+id/edit_item4"
        style="@style/Edit_Text"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:hint="Item"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/edit_item3" />

    <EditText
        android:id="@+id/edit_Peso4"
        style="@style/Edit_Text"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="9dp"
        android:hint="Peso"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edit_item1"
        app:layout_constraintStart_toStartOf="@+id/edit_item4"
        app:layout_constraintTop_toBottomOf="@+id/edit_Peso3" />

    <EditText
        android:id="@+id/edit_item5"
        style="@style/Edit_Text"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginTop="5dp"
        android:hint="Item"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/edit_item4" />

    <EditText
        android:id="@+id/edit_Peso5"
        style="@style/Edit_Text"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="202dp"
        android:layout_marginTop="5dp"
        android:hint="Peso"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/containerComponents"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/edit_item1"
        app:layout_constraintStart_toStartOf="@+id/edit_item5"
        app:layout_constraintTop_toBottomOf="@+id/edit_Peso4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_criar_equipamento"
        style="@style/Button"
        android:layout_marginTop="35dp"
        android:text="Criar equipamentos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerComponents" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_atualizar_equipamentos"
        style="@style/Button"
        android:layout_marginTop="35dp"
        android:text="Atualizar equipamentos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_criar_equipamento" />



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>